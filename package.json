{
    "name": "nightwatch_typescript",
    "version": "1.0.0",
    "description": "Nightwatch typescript testing",
    "main": "index.js",
    "scripts": {
        "start": "ts-node -r ts-node/register ./tests/e2e/google.e2e.ts",
        "build": "tsc",
        "build-test": "tsc && npm run test-single-group",
        "test-chrome": "tsc && nightwatch -e chrome -c ./build/config/nightwatch.conf.js",
        "test-firefox": "nightwatch -e firefox -c ./build/config/nightwatch.conf.js",
        "test-edge18": "nightwatch -e edge18 -c ./build/config/nightwatch.conf.js",
        "test-edge": "nightwatch -e edge -c ./build/config/nightwatch.conf.js",
        "test-ie": "nightwatch -e ie -c ./build/config/nightwatch.conf.js",
        "test-all": "nightwatch -e chrome,firefox,edge18 -c ./build/config/nightwatch.conf.js",
        "test-single-test": "nightwatch -e chrome -c ./build/config/nightwatch.conf.js -t ./build/config/e2e/Search.e2e.js --testcase \"Search test2\"",
        "test-single-group": "nightwatch -e chrome -c ./build/config/nightwatch.conf.js -g ./build/config/e2e",
        "test-mocha": "nightwatch -e chrome -c ./build/config/nightwatch.conf.js -t ./build/config/e2e/mocha.e2e.js"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/nightwatch": "^1.1.3",
        "@typescript-eslint/eslint-plugin": "^2.19.0",
        "@typescript-eslint/parser": "^2.19.0",
        "chromedriver": "^80.0.1",
        "eslint": "^6.8.0",
        "geckodriver": "^1.19.1",
        "iedriver": "^3.14.1",
        "nightwatch": "^1.3.4",
        "selenium-server": "^3.141.59",
        "typescript": "^3.7.5"
    }
}
