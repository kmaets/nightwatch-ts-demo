    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Nightwatch Debug",
            "program": "${workspaceRoot}/node_modules/nightwatch/bin/runner.js",
            "preLaunchTask": "npm: build",
            "stopOnEntry": false,
            "args": [
                "-e",
                "chrome",
                "-c",
                "./build/nightwatch.conf.js",
                "-t",
                "./build/Suites/MemorialPage.e2e.js"
            ],
            "runtimeExecutable": null,
            "console": "integratedTerminal",
            "sourceMaps": true
        },
